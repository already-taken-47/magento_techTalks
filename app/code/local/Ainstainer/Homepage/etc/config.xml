<?xml version="1.0"?>
<config>
    <modules>
        <Ainstainer_Homepage>
            <version>0.1.3</version>
        </Ainstainer_Homepage>
    </modules>
    <global>
        <helpers>
            <slider>
                <class>Ainstainer_Homepage_Helper</class>
            </slider>
        </helpers>
        <blocks>
            <homepage>
                <class>Ainstainer_Homepage_Block</class>
            </homepage>
        </blocks>
        <blocks>
            <banners>
                <class>Ainstainer_Homepage_Block</class>
            </banners>
        </blocks>
        <blocks>
            <slider>
                <class>Ainstainer_Homepage_Block</class>
            </slider>
        </blocks>
        <models>
            <homepage>
                <class>Ainstainer_Homepage_Model</class>
                <resourceModel>homepage_resource</resourceModel>
            </homepage>
            <homepage_resource>
                <class>Ainstainer_Homepage_Model_Resource</class>
                <entities>
                    <slider>
                        <table>slider_homepage</table>
                    </slider>
                </entities>
            </homepage_resource>
        </models>
        <resources>
            <slider_setup>
                <setup>
                    <module>Ainstainer_Homepage</module>
                    <class>Ainstainer_Homepage_Model_Resource_Setup</class>
                </setup>
            </slider_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <ainstainer_homepage>
                    <file>ainstainer/homepage.xml</file>
                </ainstainer_homepage>
            </updates>
        </layout>
        <routers>
            <ain_homepage>
                <use>standard</use>
                <args>
                    <module>Ainstainer_Homepage</module>
                    <frontName>homepage</frontName>
                </args>
            </ain_homepage>
        </routers>
    </frontend>
</config>
<?xml version="1.0"?>
<config>
    <modules>
        <Ainstainer_Category>
            <version>0.0.1</version>
        </Ainstainer_Category>
    </modules>
    <global>
        <events>
            <catalog_category_save_before>
                <observers>
                    <ainstainer_category_save_before>
                        <class>Ainstainer_Category_Model_Observer</class>
                        <method>setDuplicatedUrlKey</method>
                    </ainstainer_category_save_before>
                </observers>
            </catalog_category_save_before>
            <catalog_category_save_after>
                <observers>
                    <ainstainer_category_save_after>
                        <class>Ainstainer_Category_Model_Observer</class>
                        <method>saveDefaultStoreCategoryUrlKey</method>
                    </ainstainer_category_save_after>
                </observers>
            </catalog_category_save_after>
            <controller_action_predispatch>
                <observers>
                    <ainstainer_homepage_redirect>
                        <class>Ainstainer_Category_Model_HomepageRedirectObserver</class>
                        <method>redirect</method>
                    </ainstainer_homepage_redirect>
                    <checkpaymentandmagentoversion>
                        <class>Ainstainer_Category_Model_HomepageRedirectObserver</class>
                        <method>checkPaymentAndMagentoVersion</method>
                    </checkpaymentandmagentoversion>
                </observers>
            </controller_action_predispatch>
        </events>
        <models>
            <sales>
                <rewrite>
                    <order>Ainstainer_Category_Model_Order</order>
                </rewrite>
            </sales>
        </models>
    </global>
    <frontend>
        <routers>
            <testroute>
                <use>standard</use>
                <args>
                    <module>Ainstainer_Category</module>
                    <frontName>testroute</frontName>
                </args>
            </testroute>
            <customer>
                <args>
                    <modules>
                        <ain_category before="Mage_Customer">Ainstainer_Category</ain_category>
                    </modules>
                </args>
            </customer>
        </routers>
    </frontend>
</config>
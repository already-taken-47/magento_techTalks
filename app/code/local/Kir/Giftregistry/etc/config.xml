<config>
    <modules>
        <Kir_Giftregistry>
            <version>0.0.1</version>
        </Kir_Giftregistry>
    </modules>
    <global>
        <models>
            <kir_giftregistry>
                <class>Kir_Giftregistry_Model</class>
                <resourceModel>kir_giftregistry_mysql4</resourceModel>
            </kir_giftregistry>
            <kir_giftregistry_mysql4>
                <class>Kir_Giftregistry_Model_Mysql4</class>
                <entities>
                    <entity>
                        <table>kir_giftregistry_entity</table>
                    </entity>
                    <item>
                        <table>kir_giftregistry_item</table>
                    </item>
                    <type>
                        <table>kir_giftregistry_type</table>
                    </type>
                </entities>
            </kir_giftregistry_mysql4>
        </models>

        <resources>
            <kir_giftregistry_setup>
                <setup>
                    <module>Kir_Giftregistry</module>
                    <class>Kir_Giftregistry_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </kir_giftregistry_setup>
            <kir_giftregistry_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </kir_giftregistry_write>
            <kir_giftregistry_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </kir_giftregistry_read>
        </resources>

        <helpers>
            <kir_giftregistry>
                <class>Kir_Giftregistry_Helper</class>
            </kir_giftregistry>
        </helpers>
        <blocks>
            <kir_giftregistry>
                <class>Kir_Giftregistry_Block</class>
            </kir_giftregistry>
        </blocks>
    </global>
    <frontend>
        <routers>
            <kir_giftregistry>
                <use>standard</use>
                <args>
                    <module>Kir_Giftregistry</module>
                    <frontName>giftregistry</frontName>
                </args>
            </kir_giftregistry>
        </routers>
        <layout>
            <updates>
                <kir_giftregistry module="kir_giftregistry">
                    <file>kir/kir_giftregistry.xml</file>
                </kir_giftregistry>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <kir_giftregistry before="Mage_Adminhtml">Kir_Giftregistry_Adminhtml</kir_giftregistry>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <kir_giftregistry module="kir_giftregistry">
                    <file>giftregistry.xml</file>
                </kir_giftregistry>
            </updates>
        </layout>
    </adminhtml>
</config>